    "version": "0.2.0",
    "configurations": [{
        "name": "Python: Flask",
        "type": "python",
        "request": "launch",
        "pythonPath": "${config:python.pythonPath}",
        "module": "flask",
        "env": {
            "FLASK_APP": "app.py"
        },
        "args": [
            "run",
            "--no-debugger",
            "--no-reload",
            "--port=3000"
        ],
        "jinja": true
    }]
}